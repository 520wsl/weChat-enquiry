/* components/itemEnquiry/itemEnquiry.wxss */

/* 副标题 1 */

.second-title {
    color: #666;
}

/* 副标题 2 */

.second-title2 {
    color: #999;
}

/* 线的颜色 */

.hr {
    border-bottom: 1px solid;
    border-color: #e0e0e0;
}

.pic image {
    max-width: 100%;
    max-height: 100%;
}

.item {
    padding: 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.info{
    flex: 1;
}
.title {
    font-size: 24rpx;
    color: #333;
    max-height: 60rpx;
    line-height: 30rpx;
    overflow: hidden;
}

.nav {
    display: flex;
    justify-content: space-between;
    height: 40rpx;
    margin: 11rpx 0;
}

.map {
    font-size: 24rpx;
    line-height: 40rpx;
    display: flex;
    color: #999;
    align-items: center;
}

.nav-btn {
    font-size: 24rpx;
    color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 132rpx;
}

.nav-btn .btn {
    background-color: #619afa;
    width: 108rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    border-radius: 30rpx;
}

.nav-btn .btn2 {
    background-color: #33cc82;
}

.nav-btn .btn3 {
    background-color: #f56364;
}

.map-pic {
    width: 20rpx;
    height: 40rpx;
    margin-right: 15rpx;
}
.mony{
    font-size: 32rpx;
    color: #ff4444;
}
.arrow {
    width: 14rpx;
    height: 40rpx;
}

.pro-pic {
    width: 120rpx;
    height: 120rpx;
    margin-right: 30rpx;
}
