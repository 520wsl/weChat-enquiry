/* components/kingList/kingList.wxss */
/* 标王详情 */
.king-detail{
  min-height: 295rpx;
  width: 704rpx;
  margin: 0 auto;
  margin-top: 16rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.20);
  border-radius: 5px;
}
.king-detail .detail-head{
  height: 87.8rpx;
  width: 100%;
  background: #F4F9FC;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.king-detail .detail-head .head-left{
  display: flex;
  align-items: center;
  margin-left: 38rpx;
}
.king-detail .detail-head .head-left .key-words{
  margin-left:18rpx; 
  line-height: 53.8rpx;
  font-size: 28rpx;
  color: #333333;
}
.king-detail .detail-head .img image{
  width: 36rpx;
  height: 36rpx;
  margin-top:10rpx;  
}
.king-detail .detail-head .head-right{
  width: 112rpx;
  height: 40rpx;
  font-size: 24rpx;
  color: #6495F9;
  margin-right: 57rpx;
  background: #E7EBED;
  border-radius: 22px;
  text-align:center;  
}
.king-detail .head-right text{
  text-align: center;
  line-height: 40rpx;
}
.king-detail .detail-content{
  font-size: 28rpx;
  margin: 0 26rpx;
}
.king-detail .detail-content .top{
  min-height: 120rpx;
  max-height: 179rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.king-detail .detail-content .top .content-left{
  margin-left: 10rpx;
  color: #666666;
}
.king-detail .detail-content .top-company{
  margin-top: -50rpx;
}
.king-detail .detail-content .top .content-right-money{
  font-size: 30rpx;
  margin-right: 10rpx;
  color: #FF4444;
}
.king-detail .detail-content .top .content-right-company{
  margin-right: 10rpx;
  color: #333333;
}
.king-detail .detail-link{
  height: 90rpx;
  font-size: 28rpx;
  color: #999999;
  display: flex;
  margin: 0 36rpx;
  border-top: 1px dashed #E0E0E0;
  justify-content: space-between;
  align-items: center;
}
.king-detail .detail-link .img image{
  height: 28rpx;
  width: 14rpx;
}