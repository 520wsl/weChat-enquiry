/**app.wxss**/

/* 页面默认背景色 */

page {
  height: 100%;
  background-color: #f2f2f2;
}

/* 主题背景颜色 */

.theme-bg {
  background-color: #f2f2f2;
}

/* 渐变背景色 */

.gradient-bg {
  color: #fff;
  background-image: linear-gradient(-225deg, #55abf6 0%, #7b73fe 100%);
}

/* 线的颜色 */

.hr {
  border-bottom: 1px solid;
  border-color: #e0e0e0;
}

/* 主标题 */

.title {
  color: #333;
}

/* 副标题 1 */

.second-title {
  color: #666;
}

/* 副标题 2 */

.second-title2 {
  color: #999;
}

.main {
  margin: 0 30rpx;
  overflow: hidden;
}

.pic image {
  max-width: 100%;
  max-height: 100%;
}

/* 单行显示省略号 */

.txt-more {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 多行显示省略号 */

.txt-more-multiple {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 底线 */

.bottom-line {
  padding: 18rpx 30rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  background-color: #f2f2f2;
  text-align: center;
  align-items: center;
}

.bottom-line .line {
  flex: 1;
  width: 100%;
  height: 2rpx;
  background: #e0e0e0;
}

.bottom-line .line-txt {
  padding: 0 20rpx;
  flex: 1;
}

/* 修改价格按钮 */

.editPic {
  padding: 5rpx 15rpx;
  background: rgba(100, 149, 249, 0.13);
  border-radius: 33px;
  color: #6495f9;
  font-size: 24rpx;
  margin-left: 18rpx;
}

.askBtn {
  width: 96rpx;
  height: 96rpx;
  position: fixed;
  bottom: 30rpx;
  right: 10rpx;
  padding: 0;
  border:none!important;
  z-index: 2147483647
}
