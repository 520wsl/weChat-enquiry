/* pages/log/wxlog/wxloginfo.wxss */

.loginfo {
    margin: 22rpx 30rpx;
    padding: 22rpx 30rpx;
    background-color: #fff;
    border-radius: 15rpx;
    border: 1px solid #C4C2C2;
    min-height: 1000rpx;
}

.item-top {
    display: flex;
    align-items: center;
    padding-bottom: 22rpx;
    border-bottom: 1px dashed #E0E0E0;
}

.icon {
    width: 54rpx;
    height: 56rpx;
}

.title {
    font-size: 28rpx;
    line-height: 40rpx;
    color: #333;
    padding: 0 30rpx;
}

.title .time {
    font-size: 24rpx;
    line-height: 34rpx;
    color: #999;
}

.content {
    padding: 30rpx 0;
}

.content image {
    width: 30rpx;
    height: 28rpx;
    margin-right: 15rpx;
}

.content .txt {
    font-size: 28rpx;
    color: #333;
    line-height: 40rpx;
    word-break: break-all;
}

.back{
  overflow: hidden;
}
.back .backbtn{
  float: right;
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  border-radius: 50rpx;
  background-color: #000;
  filter: alpha(opacity=50); /*支持 IE 浏览器*/
 -moz-opacity: 0.50; /*支持 FireFox 浏览器*/
 opacity: 0.50; /*支持 Chrome, Opera, Safari 等浏览器*/
}