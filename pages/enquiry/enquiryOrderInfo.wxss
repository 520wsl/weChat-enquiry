/* pages/enquiry/enquiryOrderInfo.wxss */
page{
  background: #fff;
}
.order-info {
  word-break: break-all;
}
.state {
  padding: 24rpx 30rpx;
  background: #fff;
  /* margin-bottom: 10rpx; */
  border-top: 1rpx solid #f2f2f2;
  border-bottom:10rpx solid #f2f2f2;
  background: #fff url(http://1.img.dianjiangla.com/enquiryAssets/icon/order_info_bg.png) no-repeat center center;
  background-size: 100%;
}

.state .title {
  font-size: 28rpx;
  height: 30rpx;
  color: #fff;
  text-shadow: 1rpx 1rpx 2rpx #3f6fcf;
}

.person-mess {
  padding-left: 30rpx;
  background: #fff;
  border-bottom: 6rpx solid #d6e2fa;
}

.details {
  display: flex;
  /* align-items: center; */
  padding: 24rpx 44rpx 24rpx 0;
}

.details .icon {
  width: 34rpx;
  height: 32rpx;
}

.details .txt {
  margin-left: 44rpx;
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

.dh {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
}
.pic-phone{
  /* border: 1px solid #FC8B1F; */
  border-radius: 2px;
  font-size:24rpx;
  color:#FD7D20;
  text-align: center;
    width: 112rpx;
    height: 34rpx;
    margin-left: 15rpx;
}
.infobtn {
  width: 188rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  color: #6495f9;
  border: 1px solid #ebf1fe;
  border-radius: 50rpx;
  font-size: 24rpx;
  background: #ebf1fe;
}

.m-b-20 {
  margin-bottom: 10rpx;
  background-color: #fff;
}
.goods-mess .title {
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #333;
  height: 88rpx;
  line-height: 88rpx;
}

.goods-mess .title .img {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
  margin-bottom: -3rpx;
}


/* 空数据 */

.no-data {
  text-align: center;
  font-size: 28rpx;
  color: #ccc;
  margin-top: 212rpx;
}

.no-data .img {
  display: block;
  width: 190rpx;
  height: 178rpx;
  margin: auto;
}

.no-data .txt {
  margin-top: 40rpx;
  display: block;
}
