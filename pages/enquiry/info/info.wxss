.mains {
  font-size: 26rpx;
  height: auto;
  width: 100%;
}

.record {
  height: auto;
  width: 100%;
  margin-bottom: 20rpx;
  background-color: #f2f2f2;
}

.record-section {
  display: none;
}

.record.ac .record-section {
  display: block;
}

.record.ac .recordT {
  color: #fc7c1f;
}

.record.ac .img {
  transform: rotate(90deg);
  transform-origin: center;
}

.recordT {
  padding-left: 52rpx;
  background: url('http://1.img.dianjiangla.com/enquiryAssets/documentaryRecord.png') no-repeat left center;
  background-size: 40rpx 30rpx;
}

.record.ac .recordP::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30rpx;
  right: 0;
  height: 2rpx;
  background: #e0e0e0;
}

.recordP {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  padding: 0 30rpx;
  display: flex;
  position: relative;
}

.recordP-right {
  text-align: right;
  flex: 1;
}

.time {
  color: #999;
  font-size: 24rpx;
}

.recordP-right .img {
  width: 14rpx;
  height: 28rpx;
  margin-left: 36rpx;
  margin-bottom: -4rpx;
}

.recordUl {
  background-color: #fff;
  height: auto;
  padding: 0 30rpx;
  margin-bottom: 10rpx;
  padding-bottom: 15rpx;
}

.recordList {
  display: flex;
  padding: 10rpx 0;
  justify-content: flex-start;
}

.statusL {
  color: #999;
  width: 140rpx;
  line-height: 40rpx;
  word-wrap: break-word;
}

.statusR {
  color: #333;
  flex: 1 
}

/* 补充样式 */

.shrink {
  position: relative;
}

.shrink::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  width: 100%;
  height: 2rpx;
  background: #e0e0e0;
}

/* 空数据 */

.no-data {
  text-align: center;
  font-size: 28rpx;
  color: #ccc;
  margin-top: 212rpx;
}

.no-data .img {
  display: block;
  width: 190rpx;
  height: 178rpx;
  margin: auto;
}

.no-data .txt {
  margin-top: 40rpx;
  display: block;
}

.pic-phone {
  width: 112rpx;
  height: 34rpx;
  margin-left: 15rpx;
}

.updated {
  color: #598aed;
}

/* 弹窗 */

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.modal-content {
  width: 560rpx;
  margin: auto;
  margin-top: 250rpx;
  background: #fff;
  border-radius: 18rpx;
}

.modal-header {
  position: relative;
}

.modal-header .modal-icon {
  position: absolute;
  right: 0;
  top: -60rpx;
}

.modal-body {
  padding: 50rpx 30rpx 50rpx;
}

.modal-body .section {
  text-align: center;
  margin-bottom: 52rpx;
}

.modal-body .section:last-child {
  margin: 0;
}

.modal-body .section .title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.modal-body .section .text {
  font-size: 15px;
  color: #030303;
  text-align: left;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #e5e5e5;
}

.modal-footer .confirm {
  flex: 1;
  font-size: 32rpx;
  color: #6495f9;
  width: 100%;
  padding: 20rpx 0 30rpx;
  text-align: center;
  border-right: 1rpx solid #e5e5e5;
}

.modal-footer .confirm.default {
  color: #333;
}

.modal-footer .confirm:last-child {
  border: none;
}

.updated {
  color: #598aed;
}

.phone-txt {
  color: #fd7d20;
}
