<!--pages/enquiry/enquiry.wxml-->
<view class="enquiry">
  <view class="buy-type">
    <component-date-control active="{{active}}" bindgetTime="getTime" />
    <navigator class="link-time" url='/pages/enquiry/time/time'>
      <text class="time" wx:if="{{enquiryTime}}">{{enquiryTime.startTime}} 至 {{enquiryTime.endTime}}</text>
      <image class="img" src="{{CDN}}icon_date.png" />
    </navigator>
  </view>

  <view class="trading">
    <view class="header">
      <view class="text">
        <view class="img">
          <image src="{{CDN}}icon_trading.png" />
        </view>
        <view class="t1">40.98%</view>
        <view class="t2">成交占比</view>
      </view>
    </view>
    <view class="section">
      <view class="module">
        <view class="text">
          <view class="t1">总金额</view>
