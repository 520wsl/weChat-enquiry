        <view class="text">
          <view class="t1">总金额</view>
          <view class="t2">￥2323.00</view>
          <view class="t3">197笔</view>
        </view>
      </view>
    </view>
  </view>

  <view class='list'>
    <itemEnquiry wx:for="{{list}}" wx:key="{{index}}" item="{{item}}"></itemEnquiry>
  </view>
  <view wx:if="{{list.length == 0}}" class="no-data">
    <image src="{{CDN}}record_no.png" class="img" />
    <text class="txt">抱歉!没有找到符合条件的记录</text>
  </view>
</view>