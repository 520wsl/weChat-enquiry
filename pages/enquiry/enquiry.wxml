<!--pages/enquiry/enquiry.wxml-->
<view class="enquiry">
  <component-date-control active="{{active}}" bindgetTime="getTime" />
  <view class="buy-type">
    <view class="left">买家类型</view>
    <view class="right">
      <navigator url='/pages/enquiry/time/time'>
        <text class="time" wx:if="{{enquiryTime}}">{{enquiryTime.startTime}} 至 {{enquiryTime.endTime}}</text>
        <image class="img" src="{{CDN}}icon_date.png" />
      </navigator>
    </view>
  </view>
  <view class='list'>
    <itemEnquiry wx:for="{{list}}" wx:key="{{index}}" item="{{item}}"></itemEnquiry>
  </view>
  <view wx:if="{{list.length == 0}}" class="no-data">
    <image src="{{CDN}}record_no.png" class="img" />
    <text class="txt">抱歉!没有找到符合条件的记录</text>
  </view>
</view>