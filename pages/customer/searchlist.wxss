/* pages/customer/searchlist.wxss */
page {
  background-color: #fff;
}
.list {
  padding: 0 30rpx;
  padding-bottom:60rpx; 
  overflow: hidden;
}


.list .item {
  min-height: 190rpx;
  box-shadow: 0 2rpx 8rpx 0 rgba(223, 223, 223, 0.50);
  border-radius: 3rpx;
  padding: 20rpx 30rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.list .item .icon-txt {
  margin-right: 15rpx;
}

.list .item .text {
  display: block;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  background-color: #a5d3a6;
  color: #fff;
  font-size: 64rpx;
  border-radius: 120rpx;
  overflow: hidden;
}

.list .item .item-content {
  flex: 1;
  margin-bottom: 5rpx;
  font-size: 24rpx;
}

.list .item .item-content .content {
  height: 60rpx;
  margin-bottom: 5rpx;
}

.list .item .item-content .top-name {
  font-size: 32rpx;
  color: #3c3c3c;
  width: 250rpx;
  display: inline-block;
}

.list .item .item-content .icon {
  color: #6495f9;
  background-color: #e4edfe;
  padding: 10rpx 10rpx;
  border-radius: 6rpx;
  margin: 0 10rpx;
}

.list .item .item-content .radius {
  border-radius: 50rpx;
  padding: 10rpx 30rpx;
}

.list .item .item-content .btn {
  height: 60rpx;
  line-height: 60rpx;
}

.list .item .item-content .btn .radius {
  border-color: #55abf6;
  background-image: linear-gradient(-225deg, #55abf6 0%, #7b73fe 100%);
  color: #fff;
}

.list .item .item-content .phone {
  height: 60rpx;
  line-height: 60rpx;
  color: #888;
  font-size: 26rpx;
}

.list .item .img {
  width: 14rpx;
  height: 28rpx;
}

.list .item .icon-text0 {
  background-color: #a5d3a6;
}

.list .item .icon-text1 {
  background-color: #89d8fb;
}

.list .item .icon-text2 {
  background-color: #fad056;
}

.list .item .icon-text3 {
  background-color: #ff7c6c;
}

.list .item .icon-text4 {
  background-color: #e3d8e0;
}
