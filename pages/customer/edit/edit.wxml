<!--pages/customer/edit/edit.wxml-->
<view class='edit-requiredInfo'>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      真实姓名<span class='red'>*</span> 
    </view>
    <input type='text' name="trueName" value="{{info.trueName}}" bindinput="setTrueName" placeholder="请输入客户真实姓名" placeholder-class='second-title2'
        />
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      电话<span class='red'>*</span> 
    </view>
    <input type='number' maxlength="11" name="phone" value="{{info.phone}}" bindinput="setPhone" placeholder="请输入客户电话" placeholder-class='second-title2'
        />
  </view>
  <view class='edit-requiredInfo-item borderBottom' wx:if="{{type == 'add'}}">
    <view>
      客户来源<span class='red'>*</span> 
    </view>
    <view class="identity-control" bindtap="setSource">
      <a>{{sourceList[info.source].label}}</a>
      <span class='arrow'></span>
    </view>
  </view>
  <view class='edit-requiredInfo-item'>
    <view>
      客户身份<span class='red'>*</span> 
    </view>
    <chooseIdentity bindgetType="getType" active='{{info.customerType}}'></chooseIdentity>
  </view>
</view>
<view class='edit-requiredInfo'>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      公司 
    </view>
    <input type='text' name="company" value="{{info.company}}" placeholder="选填" placeholder-class='second-title2'
        />
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      职位 
    </view>
    <input type='text' name="position" value="{{info.position}}" placeholder="选填" placeholder-class='second-title2'
        />
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      微信号
    </view>
    <input type='text' name="wechat" value="{{info.wechat}}" placeholder="选填" placeholder-class='second-title2'
        />
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      旺旺号 
    </view>
    <input type='text' name="account" value="{{info.account}}" placeholder="选填" placeholder-class='second-title2'
        />
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      生日
    </view>
    <picker class='dataPicker' mode='date' bindchange="birthdayChange" end='{{endTime}}'>
      <text class="{{info.birthday==''?'':'black'}}">{{info.birthday==''?'请选择客户生日':info.birthday}}</text>
      <span class="arrow {{info.birthday==''?'borderblack':''}}"></span>
    </picker>
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      性别
    </view>
    <chooseSex bindgetSex='getSex' active="{{info.sex}}"></chooseSex>
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      电子邮箱 
    </view>
    <input type='text' name="eMail" value="{{info.eMail}}" placeholder="选填" placeholder-class='second-title2'
        />
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      所在地区 
    </view>
    
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <view>
      详细地址 
    </view>
    <input type='text' name="detailAddress" value="{{info.detailAddress}}" placeholder="选填" placeholder-class='second-title2'
        />
  </view>
  <view class='edit-requiredInfo-item'>
    <view>
      备注 
    </view>
    <input type='text' name="remarks" value="{{info.remarks}}" placeholder="选填" placeholder-class='second-title2'
        />
  </view>
</view>
<view class='edit-requiredInfo' wx:if="{{type == 'edit'}}">
  <view class='edit-requiredInfo-item borderBottom'>
    <text>客户来源</text>
    <text>{{info.source}}</text>
  </view>
  <view class='edit-requiredInfo-item borderBottom'>
    <text>客户等级</text>
    <text>{{info.level == 0?'普通会员':info.level == 1?':高级会员':info.level == 2?'vip会员':info.level == 3?'至尊会员':''}}</text>
  </view>
  <view class='edit-requiredInfo-item'>
    <text>合作日期</text>
    <text>{{info.cooperateDate}}</text>
  </view>
</view>
<view class='saveInfo'>
  <button bindtap='save'>保存</button>
</view>