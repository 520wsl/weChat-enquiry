.dataPicker{
  display: flex;
  align-items: center;
  justify-content: right;
}
.arrow{
  margin-left: 10rpx;
  height: 0;
  width: 0;
  border-style: solid;
  border-width: 8rpx 10rpx;
  border-color: #666 transparent transparent transparent;
  position: relative;
  top: 20rpx;
}
.borderblack{
  border-color: #a6a6a6 transparent transparent transparent;
}
.edit-requiredInfo-item .black{
  color: #666;
}
.identity-control{
  display: flex;
  align-items: center;
  justify-content: right;
}
.identity-control a{
  color: #666;
  font-size: 26rpx;
}
.identity-control .arrow{
  margin-left: 10rpx;
  height: 0;
  width: 0;
  border-style: solid;
  border-width: 8rpx 10rpx;
  border-color: #666 transparent transparent transparent;
  position: relative;
  top: 4rpx;
}
