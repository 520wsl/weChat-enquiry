.infoTop{
  padding: 48rpx 0 0 48rpx;
  background: #fff;
  display: flex;
}
.infoTop-nameIcon{
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  background: #FAD056;
  border-radius: 100%; 
  font-size: 64rpx;
  color: #fff;
  margin-right: 36rpx;
}
.infoTop-nameRank{
  display: flex;
}
.infoTop-name{
 font-size: 30rpx;
 color: #3c3c3c; 
 margin-right: 36rpx;
 font-weight: bold;
}
.infoTop-rankIcon{
  font-size: 16rpx;
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  background: #e4edfe;
  border-radius: 2rpx;
  color: #6495F9;
  margin: 6rpx 10rpx 0 0;
}
.infoTop-rank{
  color: #6495F9;
  background: #e4edfe;
  text-align: center;
  font-size: 20rpx;
  padding: 0 12rpx;
  border-radius: 14rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin: 6rpx 0 0 0;
}
.infoTop-identity{
  font-size: 20rpx;
  color: #fff;
  padding:0  14rpx;
  background-image: linear-gradient(-199deg, #58A6F6 0%, #7A75FE 100%);
}