  background-color: #a5d3a6;
}

.icon-text1 {
  background-color: #89d8fb;
}

.icon-text2 {
  background-color: #fad056;
}

.icon-text3 {
  background-color: #ff7c6c;
}

.icon-text4 {
  background-color: #e3d8e0;
}
