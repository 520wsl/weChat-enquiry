<!--pages/home/home.wxml-->
<view class='home'>
  <!-- banner -->
  <view class="banner">
    <component-roasting indicatorDots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}" indicatorActiveColor="{{indicatorActiveColor}}" imgUrls="{{imgUrls}}"></component-roasting>
  </view>
  <view class="title">{{company}}</view>

  <!-- 询盘统计 -->
  <view class="enquiry">
    <view class="header">
      <text class="text">询盘统计分析</text>
    </view>
    <!-- 日期选择控件 -->
    <component-date-control bindgetTime="getTime" />
    <view class="section">
      <view class="bg-setion bg-shadow"></view>
      <view class="real-setion bg-shadow">
        <navigator wx:if="{{enquire.totalValue}}" url="/pages/home/enquiry/enquiry" class="navigator" hover-class="">
          <image src="http://1.img.dianjiangla.com/enquiryAssets/enquiry_1.png" class='icon' />
          <view class="left">
            <text class='t1'>{{'本周'}}询盘</text>
            <text class='t2'>总价值</text>
          </view>
          <view class="right">
            <text>￥{{enquire.totalValue}}</text>
            <image src="http://1.img.dianjiangla.com/enquiryAssets/icon_right.png" class="img" />
          </view>
        </navigator>
        <navigator wx:if="{{enquire.tranValue}}" url="/pages/home/enquiry/enquiry" class="navigator" hover-class="">
          <image src="http://1.img.dianjiangla.com/enquiryAssets/enquiry_2.png" class='icon' />
          <view class="left">
            <text class='t1'>{{'本周'}}询盘</text>
            <text class='t2'>成交价值</text>
          </view>
          <view class="right">
            <text>￥{{enquire.tranValue}}</text>
            <image src="http://1.img.dianjiangla.com/enquiryAssets/icon_right.png" class="img" />
          </view>
        </navigator>
        <navigator wx:if="{{enquire.enquireValue}}" url="/pages/home/enquiry/enquiry" class="navigator" hover-class="">
          <image src="http://1.img.dianjiangla.com/enquiryAssets/enquiry_3.png" class='icon' />
          <view class="left">
            <text class='t1'>{{'本周'}}询盘</text>
            <text class='t2'>跟单价值</text>
          </view>
          <view class="right">
            <text>￥{{enquire.enquireValue}}</text>
            <image src="http://1.img.dianjiangla.com/enquiryAssets/icon_right.png" class="img" />
          </view>
        </navigator>
        <navigator wx:if="{{enquire.lossValue}}" url="/pages/home/enquiry/enquiry" class="navigator" hover-class="">
          <image src="http://1.img.dianjiangla.com/enquiryAssets/enquiry_4.png" class='icon' />
          <view class="left">
            <text class='t1'>{{'本周'}}询盘</text>
            <text class='t2'>流失价值</text>
          </view>
          <view class="right">
            <text>￥{{enquire.lossValue}}</text>
            <image src="http://1.img.dianjiangla.com/enquiryAssets/icon_right.png" class="img" />
          </view>
        </navigator>
      </view>
    </view>
  </view>

  <!-- 客户地区 -->
  <view class="custom-area">
    <view class="header">
      <text class="text">客户地区分布统计</text>
    </view>
    <!-- 日期选择控件 -->
    <component-date-control />
    <!-- 图表 -->
    <view class="canvas">
      <canvas canvas-id="columnCanvas" class="canvas" bindtouchstart="touchHandler"></canvas>
    </view>
    <view class="list">
      <view class="list-item" wx:for="{{customerarea}}" wx:key="{{index}}">
        <image src="http://1.img.dianjiangla.com/enquiryAssets/localize.png" class="icon" />
        <view class="left">
          <text>{{item.province}}</text>
        </view>
        <view class="right">
          <text class="t1">{{item.peopleNum}}人</text>
          <text class="t2">￥{{item.money}}</text>
        </view>
      </view>
    </view>
  </view>
</view>