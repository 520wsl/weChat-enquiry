/* pages/home/setCustomer/setRank.wxss */
.list{
  padding: 15rpx 30rpx;
  padding-bottom: 60rpx;
}

.item-rank{
  background-color: #fff;
  border-radius: 15rpx;
  margin-bottom: 60rpx;
}
.item-rank .item-title{
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  background-color: #F5B9B9;
  border-radius: 15rpx 15rpx 0rpx 0rpx; 
  padding: 10rpx 30rpx;
  font-size: 30rpx;
}
.item-rank .item-title .text{
  position: relative;
  padding-left: 24rpx;
}
.item-rank .item-title .text::before{
   content: '';
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 6rpx;
  height: 24rpx;
  background: #fff;
}

.item-rank .item-title1{
  background-color: #F5B9B9;
}
.item-rank .item-title2{
  background-color: #61A2F9;
}
.item-rank .item-title3{
  background-color: #F96161 ;
}
.item-rank .item-title4{
  background-color: #E1C533;
}

.item-rank .item-list{
  padding: 30rpx;
  margin-top: 5rpx;
  border-top: 2px solid #F5B9B9;
  font-size: 28rpx;
  color: #333;
}

.item-list .list-item{
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-list .list-item input{
  text-align: right;
  color: #666;
}