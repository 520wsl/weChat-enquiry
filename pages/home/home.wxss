/* pages/home/home.wxss */

.home {
  max-width: 414px;
  margin: auto;
}

.banner {
  width: 100%;
  height: 240rpx;
}

.title {
  font-size: 32rpx;
  text-align: center;
  height: 72rpx;
  line-height: 72rpx;
  background: -webkit-linear-gradient(left, #55abf6, #7b73fe);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 询盘 */

.enquiry {
}

.enquiry .section {
  margin: 0 30rpx;
  margin-bottom: 26rpx;
  position: relative;
}

.enquiry .section::before {
  content: '';
  display: table;
  clear: both;
}

.enquiry .bg-setion {
  opacity: 0.74;
  width: 666rpx;
  height: 578rpx;
  margin: auto;
  margin-top: 14rpx;
}

.enquiry .real-setion {
  height: 578rpx;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 16.6rpx 50rpx;
  box-sizing: border-box;
}

.enquiry .real-setion .navigator {
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  height: 133rpx;
  /* line-height: 133rpx; */
  align-items: center;
}

.enquiry .real-setion .navigator:last-child {
  border: none;
}

.enquiry .real-setion .icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 22rpx;
}

.real-setion .left, .real-setion .right {
  flex: 1;
}

.real-setion .left {
  font-size: 28rpx;
}

.real-setion .left .t1, .real-setion .left .t2 {
  display: block;
}

.real-setion .left .t1 {
  color: #999;
}

.real-setion .left .t2 {
  color: #151515;
}

.real-setion .right {
  text-align: right;
  font-size: 32rpx;
  color: #f44;
  /* padding-right: 32rpx; *//* background: url('../../images/home/right@2x.png') no-repeat center right; *//* background-size: 14rpx 28rpx; */
}

.real-setion .right text {
  padding-right: 18rpx;
}

.real-setion .right .img {
  width: 14rpx;
  height: 28rpx;
}

/* 客户地区 */

.custom-area {
  background: #fff;
}

.custom-area .list {
}

.custom-area .list .list-item {
  display: flex;
  padding: 0 30rpx;
}

.custom-area .list .left {
  flex: 1;
}

.custom-area .list .icon {
  width: 40rpx;
  height: 40rpx;
}

.custom-area .list .right {
  flex: 1;
  font-size: 28rpx;
  color: #434343;
}

.custom-area .list .t1, .custom-area .list .t2 {
  font-size: 24rpx;
  color: #333;
  display: block;
  text-align: right;
}

.custom-area .list .t1 {
}

.custom-area .list .t2 {
  font-size: 28rpx;
  color: #f44;
}

/* 图表 */

canvas {
  margin-top: 30rpx;
  width: 100%;
  height: 300rpx;
  background: #fff;
}

/* common */

.bg-shadow {
  background: #fff;
  box-shadow: 0 4rpx 14rpx 0 rgba(84, 81, 183, 0.17);
  border-radius: 40rpx;
}

.header {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 30rpx;
  background: #fff;
  box-sizing: border-box;
}

.header .text {
  font-size: 28rpx;
  line-height: 1;
  color: #333;
  padding-left: 24rpx;
  position: relative;
}

.header .text::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 8rpx;
  height: 28rpx;
  background: #fea449;
}

/* 日期选择控件 */

.date-control {
  margin: 18rpx 30rpx;
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 6rpx;
  display: flex;
  text-align: center;
  height: 74rpx;
  line-height: 74rpx;
}

.date-control .control-item {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  border-left: 2rpx solid rgba(0, 0, 0, 0.1);
}

.date-control .control-item.gradient-bg {
  color: #fff;
}

.date-control .control-item:first-child {
  border: none;
}
