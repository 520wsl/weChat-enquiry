/* pages/home/erp/orderInfo/orderInfo.wxss */

.order-info {
  word-break: break-all;
}

/* common */

.m-b-20 {
  margin-bottom: 10rpx;
  background-color: #fff;
}

/* 订单状态 */

.state {
  padding: 24rpx 30rpx;
  background: #fff;
  margin-bottom: 10rpx;
  border-top: 1rpx solid #b2b2b2;
  background: #fff url(http://1.img.dianjiangla.com/enquiryAssets/icon/order_info_bg.png) no-repeat center center;
  background-size: 100%;
}

.state .title {
  font-size: 28rpx;
  color: #fff;
  text-shadow: 1rpx 1rpx 2rpx #3f6fcf;
}

.state .txt {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 个人信息 */

.person-mess {
  padding-left: 30rpx;
  background: #fff;
  border-bottom: 6rpx solid #d6e2fa;
}

.logistics {
  padding: 18rpx 30rpx 13rpx 0;
  border-bottom: 2rpx solid #e0e0e0;
  display: flex;
  align-items: center;
}

.logistics .icon.icon-arrow {
  width: 14rpx;
  height: 28rpx;
}

.logistics .txt .time {
}

.details {
  display: flex;
  align-items: center;
  padding: 24rpx 44rpx 24rpx 0;
}

.details .txt {
}

.details .txt .name {
}

.details .txt .phone {
  color: #FD7D20;
  font-size: 26rpx;
}

.details .txt .address {
}

/* logistics + details */

.logistics .icon, .details .icon {
  width: 34rpx;
  height: 32rpx;
}

.logistics .icon .img, .details .icon .img {
  max-width: 100%;
  max-height: 100%;
  display: block;
}

.logistics .txt, .details .txt {
  margin-left: 44rpx;
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 底图 */

.border-img {
  width: 100%;
  height: 6rpx;
}

.border-img .img {
  width: 100%;
  max-width: 100%;
  max-height: 100%;
  display: block;
}

/* 商品信息 */

.goods-mess {
}

.goods-mess .title {
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #333;
  height: 88rpx;
  line-height: 88rpx;
}

.goods-mess .title .img {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
  margin-bottom: -3rpx;
}

.goods-mess .list {
}

.goods-mess .item {
  margin-bottom: 4rpx;
  padding: 12rpx 30rpx;
  background: #fafafa;
  display: flex;
  overflow: hidden;
}

.goods-mess .item:last-child {
  margin-bottom: 0;
}

.goods-mess .item .img {
  width: 152rpx;
  height: 152rpx;
  margin-right: 20rpx;
}

.goods-mess .item .img image {
  max-width: 100%;
  max-height: 100%;
  display: block;
}

.goods-mess .item .txt {
  flex: 1;
}

.goods-mess .item .txt .txt-name {
  display: flex;
}

.goods-mess .item .txt .txt-name .left {
  font-size: 24rpx;
  color: #333;
  padding-right: 32rpx;
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  width: 418rpx;
}

.goods-mess .item .txt .txt-name .right {
  font-size: 28rpx;
  color: #404447;
  text-align: right;
}

.goods-mess .item .txt .txt-attr {
  font-size: 12px;
  color: #999;
  display: flex;
  margin-top: 6rpx;
}

.goods-mess .item .txt .txt-attr .left {
  padding-right: 32rpx;
  flex: 1;
  width: 0;
}

.goods-mess .item .txt .txt-attr .right {
  text-align: right;
}

.goods-mess .item .txt .btn {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 2rpx;
  font-size: 22rpx;
  color: #999;
  float: right;
  margin-top: 20rpx;
}

/* 价格信息 */

.price-mess {
  padding: 20rpx 30rpx;
}

.price-mess .txt {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: flex;
}

.price-mess .txt .left {
  flex: 1;
}

.price-mess .txt .right {
  flex: 1;
  text-align: right;
}

.price-mess .txt.realpay {
  font-size: 28rpx;
}

.price-mess .txt.realpay .right {
  color: #cb2b2b;
}

.decimal {
  font-size: 24rpx;
}

/* 交易信息 */

.trading-mess {
  padding-left: 30rpx;
}

.trading-mess .txt {
  padding-right: 30rpx;
  border-bottom: 2rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  height: 88rpx;
}

.trading-mess .txt:last-child {
  border: none;
}

.trading-mess .txt .left {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.trading-mess .txt .right {
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 订单信息 */

.order-mess {
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.dh {
  display: flex;
  align-items: center;
  justify-content:flex-start;
  margin: 4rpx 0;
}
.pic-phone{
    width: 112rpx;
    height: 34rpx;
    margin-left: 15rpx;
}