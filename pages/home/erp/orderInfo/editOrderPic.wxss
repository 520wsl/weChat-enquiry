/* pages/home/erp/orderInfo/editOrderPic.wxss */

.order-info {
  word-break: break-all;
  overflow:hidden;
}

/* common */

.m-b-20 {
  /* margin-bottom: 10rpx; */
  background-color: #fff;
}

/* 订单状态 */

.state {
  padding: 24rpx 30rpx;
  background: #fff;
  margin-bottom: 10rpx;
  border-top: 1rpx solid #b2b2b2;
  background: #fff url(http://1.img.dianjiangla.com/enquiryAssets/icon/order_info_bg.png) no-repeat center center;
  background-size: 100%;
}

.state .title {
  font-size: 28rpx;
  color: #fff;
  text-shadow: 1rpx 1rpx 2rpx #3f6fcf;
}

.state .txt {
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
}

/* 个人信息 */

.person-mess {
  padding-left: 30rpx;
  background: #fff;
  border-bottom: 6rpx solid #d6e2fa;
}

.logistics {
  padding: 18rpx 30rpx 13rpx 0;
  border-bottom: 2rpx solid #e0e0e0;
  display: flex;
  align-items: center;
}

.logistics .icon.icon-arrow {
  width: 14rpx;
  height: 28rpx;
}

.details {
  display: flex;
  align-items: center;
  padding: 24rpx 44rpx 24rpx 0;
}

.details .txt .phone {
  font-size: 26rpx;
  color: #fd7d20;
}

/* logistics + details */

.logistics .icon, .details .icon {
  width: 34rpx;
  height: 32rpx;
}

.logistics .icon .img, .details .icon .img {
  max-width: 100%;
  max-height: 100%;
  display: block;
}

.logistics .txt, .details .txt {
  margin-left: 44rpx;
  flex: 1;
  font-size: 26rpx;
  color: #333;
}

/* 底图 */

.border-img {
  width: 100%;
  height: 6rpx;
}

.border-img .img {
  width: 100%;
  max-width: 100%;
  max-height: 100%;
  display: block;
}

/* 商品信息 */

.goods-mess .title {
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #333;
  height: 88rpx;
  line-height: 88rpx;
}

.goods-mess .title .img {
  width: 24rpx;
  height: 24rpx;
  margin-right: 12rpx;
  margin-bottom: -3rpx;
}

.goods-mess .item {
  margin-bottom: 4rpx;
  padding: 12rpx 30rpx;
  background: #fafafa;
  display: flex;
  overflow: hidden;
}

.goods-mess .item:last-child {
  margin-bottom: 0;
}

.goods-mess .item .img {
  width: 152rpx;
  height: 152rpx;
  margin-right: 20rpx;
}

.goods-mess .item .img image {
  max-width: 100%;
  max-height: 100%;
  display: block;
}

.goods-mess .item .txt {
  flex: 1;
}

.goods-mess .item .txt .txt-name {
  display: flex;
}

.goods-mess .item .txt .txt-name .left {
  font-size: 24rpx;
  color: #333;
  padding-right: 32rpx;
  flex: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
  width: 418rpx;
}

.goods-mess .item .txt .txt-name .right {
  font-size: 28rpx;
  color: #404447;
  text-align: right;
}

.goods-mess .item .txt .txt-attr {
  font-size: 12px;
  color: #999;
  display: flex;
  margin-top: 6rpx;
}

.goods-mess .item .txt .txt-attr .left {
  padding-right: 32rpx;
  flex: 1;
  width: 0;
}

.goods-mess .item .txt .txt-attr .right {
  text-align: right;
}

.goods-mess .item .txt .btn {
  width: 100rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border: 2rpx solid #e0e0e0;
  border-radius: 2rpx;
  font-size: 22rpx;
  color: #999;
  float: right;
  margin-top: 20rpx;
}

/* 价格信息 */

.price-mess {
  padding: 20rpx 30rpx;
}

.price-mess .txt {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: flex;
}

.price-mess .txt .left {
  flex: 1;
}

.price-mess .txt .right {
  flex: 1;
  text-align: right;
}

.price-mess .txt.realpay {
  font-size: 28rpx;
}

.price-mess .txt.realpay .right {
  color: #cb2b2b;
}

.decimal {
  font-size: 24rpx;
}

/* 交易信息 */

.trading-mess {
  padding-left: 30rpx;
}

.trading-mess .txt {
  padding-right: 30rpx;
  border-bottom: 2rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  height: 88rpx;
}

.trading-mess .txt:last-child {
  border: none;
}

.trading-mess .txt .left {
  flex: 1;
  font-size: 28rpx;
  color: #666;
}

.trading-mess .txt .right {
  flex: 1;
  text-align: right;
  font-size: 24rpx;
  color: #999;
}

/* 订单信息 */

.order-mess {
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  margin-top: 10rpx;
}

.dh {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
}

.pic-phone {
  width: 110rpx;
  height: 32rpx;
  /* border: 1px solid #FC8B1F; */
  border-radius: 2px;
  font-size: 24rpx;
  color: #fd7d20;
  text-align: center;
  margin-left: 23rpx;
}

/*虚拟商品  */

.virtual {
  font-size: 26rpx;
  color: #f72f2f;
  justify-content: flex-start;
  margin: 4rpx 0;
}

.pic-phone {
  width: 112rpx;
  height: 34rpx;
  margin-left: 15rpx;
}

.item-order {
  background-color: #fff;
  margin-bottom: 10rpx;
  display: flex;
  justify-content: flex-end;
}

.item-order .total {
  height: 80rpx;
  line-height: 80rpx;
  text-align: right;
  font-size: 24rpx;
  padding: 0 30rpx;
  color: #666;
}

.item-order .total .num {
  margin-right: 10rpx;
}

.item-order .total .freight {
  margin: 0 10rpx;
}

.item-order .total .mony {
  margin-left: 15rpx;
  font-size: 30rpx;
  color: #cb2b2b;
}

.item-order .total .mony .decimal {
  font-size: 24rpx;
}

.edit {
  margin-top: 10rpx;
  background-color: #fff;
  padding: 25rpx 30rpx;
}

.edit .row {
  padding: 5rpx 0;
  display: flex;
  justify-content: space-between;
}

.edit .txt {
  height: 76rpx;
  line-height: 76rpx;
  font-size: 28rpx;
  color: #666;
  text-align: right;
  width: 250rpx;
}

.edit .input {
  flex: 1;
  border: 1px solid #e0e0e0;
  font-size: 24rpx;
  color: #666;
}

.edit .input input {
  height: 76rpx;
  line-height: 76rpx;
  margin-left: 15rpx;
}

.submitbtn {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  background-color:#f2f2f2;
  z-index: 9;  
}

.submitbtn .submit {
  background-color: #6495f9;
  height: 88rpx;
  line-height: 88rpx;
  margin: 30rpx;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
  border-radius: 3px;
}
.submitbtn.err .submit{
  background-color: #e0e0e0;
}

.probtn{
  width: 30rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}

.openbtn{
  width: 14rpx;
  height: 28rpx;
  line-height: 28rpx;
  transform:rotate(90deg);
  transform-origin:center;
}

.openbtn1{
   transform:rotate(-90deg);
}

/* 弹窗 */

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.modal-content {
  width: 540rpx;
  margin: auto;
  margin-top: 250rpx;
  background: #fff;
  border-radius: 18rpx;
}

.modal-header {
  position: relative;
}

.modal-header .modal-icon {
  position: absolute;
  right: 0;
  top: -60rpx;
}

.modal-body {
  padding: 50rpx 30rpx 50rpx;
}

.modal-body .section {
  text-align: center;
}
.modal-body .section .text{
  font-size: 30rpx;
  color: #333;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #e5e5e5;
}

.modal-footer .confirm {
  flex: 1;
  font-size: 32rpx;
  color: #6495f9;
  width: 100%;
  padding: 20rpx 0 30rpx;
  text-align: center;
  border-right: 1rpx solid #e5e5e5;
}

.modal-footer .confirm.default {
  color: #333;
}

.modal-footer .confirm:last-child {
  border: none;
}

.modal-body .body-content .col{
  line-height: 60rpx;
  margin-left: 90rpx;
  color: #CB2B2B;
   font-size: 30rpx;
}
.modal-body .body-content .co2{
  font-size: 32rpx;
  color: #333;
}

.msg{
  color: #F56364;
  font-size: 24rpx;
  line-height: 30rpx;
  text-align: right;
}