.nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: #333;
  /* border-bottom: 1px solid #e0e0e0; */
  border-top: 1px solid #e0e0e0;
  background-color: #f9fcfc;
  height: 70rpx;
  line-height: 70rpx;
}

.nav .flex1 {
  flex: 1;
}

.nav .time {
  width: 40rpx;
  height: 40rpx;
  margin: 0 30rpx;
}

.nav .col {
  /* height: 70rpx; */
  display: flex;
  align-items: center;
  position: relative;
  border-bottom: 1px solid #e0e0e0;
}

.nav .col:after {
  content: '';
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 1rpx;
  height: 32rpx;
  margin: auto;
  background: #e0e0e0;
}

.bor-right {
  /* border-right: 1px solid #e0e0e0; *//* height: 30rpx; *//* line-height: 30rpx; *//* text-align: center; *//* align-self: center; *//* flex: 1; */
  width: 100%;
  text-align: center;
  position: relative;
}

.bor-right .img {
  width: 30rpx;
  height: 30rpx;
  margin-bottom: -6rpx;
  margin-right: 12rpx;
}

.nav .active11, .nav .active22 {
  color: #fc7c1f;
  border-bottom: 1px solid #fc7c1f;
  position: relative;
}

.nav .active11 .bor-right::after, .nav .active22 .bor-right::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  border-left: 5rpx solid transparent;
  border-right: 5rpx solid transparent;
  border-bottom: 5rpx solid #fc7c1f;
  border-top: 5rpx solid transparent;
}

.nav .active .bor-right {
  font-size: 26rpx;
}

