/* pages/home/erp/myGoods/myGoods.wxss */

.nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    color: #333;
    border-bottom: 1px solid #e0e0e0;
    border-top: 1px solid #e0e0e0;
    background-color: #fff;
}

.nav .flex1 {
    flex: 1;
}

.nav .time {
    width: 40rpx;
    height: 40rpx;
    margin: 0 30rpx;
}

.nav .col {
    height: 70rpx;
    display: flex;
}

.bor-right {
    border-right: 1px solid #e0e0e0;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    align-self: center;
    flex: 1;
}

.nav .active11, .nav .active22 {
    color: #fc7c1f;
    border-bottom: 2px solid #fc7c1f;
}

.nav .active .bor-right {
    font-size: 26rpx;
}

.item-pro {
    padding: 24rpx 30rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item-pro .pic {
    width: 120rpx;
    height: 120rpx;
    margin-right: 30rpx;
}

.item-pro .info {
    overflow: hidden;
    min-height: 110rpx;
}

.item-pro .title {
    font-size: 24rpx;
    color: #333;
    height: 60rpx;
    line-height: 30rpx;
    overflow: hidden;
}

.item-pro .mony {
    text-align: right;
    font-size: 28rpx;
}

.item-pro .num {
    color: #cb2b2b;
}

.item-pro .txt {
    color: #3f3f3f;
}

.item-order {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.item-order .title {
    height: 82rpx;
    line-height: 82rpx;
    font-size: 24rpx;
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
}

.item-order .title .custome {
    color: #3d4244;
}

.item-order .title .type {
    color: #fc7c1f;
}

.item-order .pro{
    background-color: #FAFAFA;
    margin-bottom: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item-order .pic{
    width: 152rpx;
    height: 152rpx;
}