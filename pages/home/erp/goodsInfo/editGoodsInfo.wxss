/* pages/home/erp/goodsInfo/editGoodsInfo.wxss */
page{
  background-color: #fff;
}
.slide-image {
  width: 100%;
  height: 748rpx;
}

.goods {
  min-height: 230rpx;
  background: #fff;
  padding: 16rpx 30rpx 0 30rpx;
}

.header {
  min-height: 97rpx;
}

.header .txt {
  font-size: 28rpx;
  color: #333;
}

.goods .content {
  font-size: 24rpx;
  color: #cb2b2b;
  position: relative;
}

/*分享  */

.goods .content .share-btn {
  position: absolute;
  top: 0;
  right: 0;
  width: 26rpx;
  height: 24rpx;
  border: none;
}

.goods .content .share-img {
  float: right;
  max-width: 100%;
  width: 26rpx;
  height: 24rpx;
}

.goods .content .money {
  font-size: 48rpx;
}

.goods .content .money .double {
  font-size: 24rpx;
}

.goods .content .text {
  margin-left: 16rpx;
  color: #666;
}

.footer {
  font-size: 24rpx;
  color: #aeaeae;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer .txt {
  line-height: 64rpx;
}

/* 商品头部 */

.tittle {
  height: 83rpx;
  line-height: 83rpx;
  border-bottom: 1rpx solid #e0e0e0;
  font-size: 14px;
  color: #333;
}

.tittle .img {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  margin-bottom: -4rpx;
}

/* 商品规格 */

.norm {
  margin-top: 10rpx;
  min-height: 196rpx;
  background: #fff;
  padding-left: 30rpx;
}

.norm .sub {
  font-size: 28rpx;
  margin: 30rpx 30rpx 0rpx 0;
  padding-bottom: 30rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.norm .sub .detail .line {
  line-height: 52rpx;
  display: flex;
}

.norm .sub .detail .line .name {
  flex-shrink: 0;
}

.norm .sub .txt {
  color: #151515;
  word-break: break-all;
}

.norm .sub .pic image {
  transform: rotate(90deg);
  transform-origin: center;
  margin-left: 30rpx;
  width: 36rpx;
  height: 28rpx;
}

.norm .sub .rotate image {
  transform: rotate(-90deg);
  transform-origin: center;
}

/* <!-- 优惠信息 --> */

.discount {
  margin-top: 20rpx;
  min-height: 176rpx;
  background: #fff;
  padding-left: 30rpx;
}

.discount .prefer {
  font-size: 28rpx;
  margin-top: 20rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.discount .prefer .left {
  font-size: 20rpx;
  padding: 6rpx 20rpx;
  background: #fff6e7;
  border-radius: 3px;
  color: #fc7c1f;
}

.discount .prefer .right {
  margin-left: 20rpx;
}

/* <!-- 产品属性 --> */

.norm .sub .detail .hid {
  display: none;
}

.attr {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
  min-height: 196rpx;
  background: #fff;
  padding-left: 30rpx;
}

.attr .lists {
  margin-top: 30rpx;
  margin-right: 34rpx;
  padding-bottom: 30rpx;
}

.attr .lists .list {
  line-height: 52rpx;
}

.attr .lists .txt {
  line-height: 52rpx;
  word-break:break-all;
}

/* <!-- 买家服务 --> */

.server {
  margin-top: 10rpx;
  min-height: 176rpx;
  margin-bottom: 20rpx;
  background: #fff;
  padding-left: 30rpx;
}

.server .buyers {
  min-height: 85rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.server .buyers .pic {
  margin-right: 72rpx;
  display: flex;
}

.server .buyers image {
  width: 36rpx;
  height: 36rpx;
}

.server .buyers .txt {
  font-size: 28rpx;
  margin-left: 16rpx;
}

/* 修改模块样式 */

.edit {
  background-color: #fff;
  padding: 30rpx;
}

.edit .title {
  display: flex;
  align-items: center;
  color: #333;
  font-size: 28rpx;
  height: 80rpx;
}

.edit .icon {
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  margin-right: 18rpx;
}

/* 添加模块按钮 */

.edit .addbtn {
  margin: 30rpx;
  border: 1px solid #6495f9;
  color: #6495f9;
  background-color: #fff;
}

.edit .info {
  margin: 40rpx 0;
}

.edit .imgbk {
  position: relative;
  height: 312rpx;
}

.edit .img {
  height: 312rpx;
  background-color: #f4f5f7;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
}

.edit .bg {
  margin: auto;
  color: #949494;
  font-size: 28rpx;
  text-align: center;
  line-height: 90rpx;
}

.edit .addimage {
  width: 48rpx;
  height: 48rpx;
  margin: auto;
}

.edit .delpro {
  height: 68rpx;
  width: 690rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  z-index: 1;
  text-align: right;
}
.edit .delpro image{
  width: 32rpx;
  height: 42rpx;
  margin-top: 12rpx;
 margin-right: 22rpx;  
}
.edit .delpro2{
  background-color: #000;
  filter: alpha(opacity=50); /*支持 IE 浏览器*/
 -moz-opacity: 0.50; /*支持 FireFox 浏览器*/
 opacity: 0.50; /*支持 Chrome, Opera, Safari 等浏览器*/

}
.edit .delpro2 image{
  width: 30rpx;
  height: 36rpx;
  margin-top: 15rpx;
}

.edit .txt {
  padding-top: 30rpx;
  color: #949494;
  font-size: 28rpx;
  word-break:break-all;
}
.description {
  overflow: hidden;
  padding-bottom: 15rpx;
}
.description .txt{
  float: left; 
  color: #333;
}
.btn-txt-del{
float: right;
 width: 60rpx;
 height: 70rpx;
 line-height: 40rpx;
 display: flex;
 align-items: center;
}
.txt-del-img{
  width: 28rpx;
  height: 26rpx;
}
.btngroup {
  position: fixed;
  bottom: 0rpx;
  width: 100%;
  z-index: 2
}

.btngroup .nextbtn {
  height: 96rpx;
  line-height: 96rpx;
  display: flex;
  justify-content: space-between;
  border: 1px solid #6495f9;
  border-bottom: 0rpx;
  background-color: #fff;
  text-align: center;
  font-size: 32rpx;
}

.btngroup .leftbtn {
  flex: 1;
  color: #6495f9;
}

.btngroup .rightbtn {
  flex: 1;
  background-color: #6495f9;
  color: #fff;
}

.showimg{
