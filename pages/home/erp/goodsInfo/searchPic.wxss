/* pages/home/erp/goodsInfo/searchPic.wxss */
.proname{
  background-color: #F9FCFC;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  padding: 15rpx 30rpx;
}

.content{
  background-color: #fff;
  padding: 8rpx;
  display: flex;
  flex-wrap: wrap;
}
.img{
  width:178rpx;
  height: 178rpx;
  overflow: hidden; 
  position: relative;
  padding: 3rpx;
}
.img .pro{
  width: 178rpx;
  height: 178rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.img .iconok{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: #6495F9;
  border-radius: 50rpx; 

}

.btngroup{
  position: fixed;
  bottom: 0rpx;
  width: 100%;
}

.group{
  background-color: #292D38;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 0 30rpx;
  align-items: center;
}
.group .preview{
  color: #fff;
  width: 80rpx;
  text-align: center;
}

.group .submit{
  color: #fff;
  width: 120rpx;
  text-align: center;
  background-color: #6495F9;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
}