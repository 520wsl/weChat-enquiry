/* pages/home/hasRecord/hasRecord.wxss */

.time {
    background-color: #fff;
    font-size: 28rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    display: flex;
    justify-content: center;
}

.time text {
    margin: 0 10rpx;
}

.time .pic {
    width: 14rpx;
    height: 90rpx;
    align-items: right;
    align-self: flex-end;
    margin-left: 15rpx;
}

.time .txt {
    color: #fc7c1f;
}

.list {
    font-size: 28rpx;
    overflow: hidden;
}

.item {
    background-color: #fff;
    margin-top: 18rpx;
}

.item .title {
    height: 90rpx;
    line-height: 90rpx;
    color: #fff;
    background-color: #c4c4c4;
    display: flex;
    justify-content: space-between;
    padding: 0 28rpx;
}

.item .jpz{
    background-image: linear-gradient(-225deg, #7B73FE 0%, #55ABF6 100%);
}

.item .yqd{
    background-image: linear-gradient(-228deg, #FF731D 0%, #FEA449 100%);
}

.item .txt {
    flex: 1;
}

.item .result {
    width: 145rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.item .pic {
    width: 44rpx;
    height: 90rpx;
    overflow: hidden;
}

.info {
    overflow: hidden;
}

.info .row {
    padding: 0 18rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin: 24rpx 0;
}

.info .row text {
    text-indent: 10rpx;
}

.info .row .name {
    font-weight: bold;
}

.info .row .red {
    color: #f44;
}
.pic-flag{
    margin-left: 12rpx;
    width: 24rpx;
    height: 24rpx;
}
