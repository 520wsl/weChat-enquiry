/* pages/home/winKing/winKing.wxss */
.king-time {
  display: flex;
  height: 72rpx;
  padding: 0 30rpx;
  justify-content: flex-end;
  align-items: center;
}
.king-time .left{
  font-size: 24rpx;
  margin-right: 30rpx;
}
.king-time .right{
  width: 40rpx;
  height: 40rpx;
}
/* 头部样式 */
.header {
  width: 100%;
  height: 72rpx;
  line-height: 64rpx;
  padding: 0 30rpx;
  background: #fff;
  box-sizing: border-box;
}

.header .text {
  font-size: 28rpx;
  line-height: 1;
  color: #333;
  padding-left: 24rpx;
  position: relative;
}

.header .text::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  margin: auto;
  width: 8rpx;
  height: 28rpx;
  background: #444444;
}
/* 标王详情 */
.king-detail{
  min-height: 295rpx;
  width: 704rpx;
  margin: 0 auto;
  margin-top: 16rpx;
  background: #FFFFFF;
  box-shadow: 0 2px 4px 0 rgba(0,0,0,0.20);
  border-radius: 5px;
}
.king-detail .detail-head{
  height: 87.8rpx;
  width: 100%;
  background: #F4F9FC;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.king-detail .detail-head .head-left{
  display: flex;
  margin-left: 38rpx;
}
.king-detail .detail-head .head-left .key-words{
  margin-left:18rpx; 
  font-size: 28rpx;
  color: #333333;
}
.king-detail .detail-head .img{
  width: 36rpx;
  height: 36rpx;
}
.king-detail .detail-head .img image{
  margin-bottom: 15rpx;
}
.king-detail .detail-head .head-right{
  font-size: 24rpx;
  color: #6495F9;
  margin-right: 57rpx;
}
.king-detail .detail-content{
  font-size: 28rpx;
  margin: 0 26rpx;
  border-bottom: 1px dashed #E0E0E0;
}
.king-detail .detail-content .top{
  min-height: 120rpx;
  max-height: 179rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.king-detail .detail-content .top .content-left{
  margin-left: 10rpx;
  color: #666666;
}
.king-detail .detail-content .top-company{
  margin-top: -50rpx;
}
.king-detail .detail-content .top .content-right-money{
  font-size: 30rpx;
  margin-right: 10rpx;
  color: #FF4444;
}
.king-detail .detail-content .top .content-right-company{
  margin-right: 10rpx;
  color: #333333;
}
.king-detail .detail-link{
  height: 90rpx;
  font-size: 28rpx;
  color: #999999;
  display: flex;
  margin: 0 36rpx;
  justify-content: space-between;
  align-items: center;
}
.king-detail .detail-link .img{
  height: 28rpx;
  width: 14rpx;
}